@model Click4Trip.ViewModel.CitiesVM

@{
    ViewBag.Title = "Delete Cities";
}

<!DOCTYPE html>
<html>
<head>
    <script src="~/Scripts/jquery-1.10.2.intellisense.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Delete User</title>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <link rel="stylesheet" href="~/CSS/DeleteUser.css">
</head>

<body>
    <div class="deletecity">
        <div class="deleteuser-screen">
            <center><h2>Delete City</h2></center>
            @using (Html.BeginForm("SubmitDeleteCity", "Management", FormMethod.Post, new { id = "myForm" }))
            {
                <div class="form-group">
                    <div class="ui-widget">
                        <br /><center><label for="emails">Enter city's name (Country,City)</label></center>
                        <script>
                            $(function ()
                            {
                                var availableCities = [];

                                @foreach (var c in Model.cities)
                                {
                                    @:availableCities.push("@c");
                                }
                                $( "#cities" ).autocomplete(
                                {
                                        source: availableCities
                                });
                            });
                            alert(availableCities);
                        </script>
                        <center>@Html.TextBoxFor(x => x.selectedCity, new { @class = "form-control", id = "cities" })</center>
                        <center> @Html.ValidationMessageFor(x => x.selectedCity, null, new { @class = "text-danger" })</center>
                    </div>
                </div>
                <center>
                    <div class="form-group">
                        <p><label class="text-danger">@ViewData["msg"]</label></p>
                    </div>
                </center>
            }
            <center><button onclick="myFunction()" class="deletebtn">Delete</button></center>
        </div>
    </div>
    <script>
        function myFunction() {
            if (confirm("Are you sure?") == true) {
                document.getElementById("myForm").submit();
            }
        }
    </script>
</body>
</html>
