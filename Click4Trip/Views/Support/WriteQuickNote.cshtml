@model Click4Trip.Models.QuickSupportTicket

@{
    ViewBag.Title = "WriteQuickNote";
}
<!DOCTYPE html>
<html>
<head>
    @*<script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>*@
    <script src="~/Scripts/jquery-1.10.2.intellisense.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Authorize</title>
    <link rel="stylesheet" href="~/CSS/writereview.css">
    <link rel="stylesheet" type="text/css" href="~/CSS/NewIndex/demo.css" />

</head>

<body>
    <div class="writereview">
        <div class="writereview-screen">
            <center>
                <h2>Support Ticket</h2>
                <br /><br />
                <h3>Order number #@TempData["ID"]</h3>
                <h4>@TempData["OrderType"] ordered on @TempData["OrderDate"]</h4>
                <br />
            </center>

           
            @using (Html.BeginForm("SubmitQuickNote", "Support", FormMethod.Post, new { id = "myForm" }))
            {
                <center>
                    <div class="form-group">
                        <label style="font-size:12px;">What do you want to do? </label>
                         @Html.DropDownListFor(x => x.SupportType, new SelectList(new List<string>(){"Edit","Cancel" }), new { @class = "form-control", id = "type", align = "center" })
                        <div> @Html.ValidationMessageFor(x => x.SupportType, null, new { @class = "text-danger" })</div>
                    </div>
                    <br />
                    <div>
                        <label style="font-size:12px;">Describe your problem </label>

                        @Html.TextAreaFor(x => x.Note, 5, 10, new { type = "text", @class = "form-control", id = "invnum", placeholder = "Why do you want to change your order?", required = "required", maxlength = "500", style = "max-width:90%" })
                        <div> @Html.ValidationMessageFor(x => x.Note, null, new { @class = "text-danger" })</div>
                    </div>
                    <br />
                    <p>
                        <center>
                            <label class="text-success">@ViewData["msgsc"]</label>
                        </center>
                    </p>
                    <button type="submit" onclick="deletemsg()" class="nextbtn">Submit &raquo;</button>
                </center>
            }
        </div>

    </div>
    <script>
            function deletemsg() {
                document.getElementById("msg").innerHTML = "";
                document.getElementById("msgsc").innerHTML = "";
            }
    </script>
</body>
</html>