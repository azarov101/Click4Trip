@model Click4Trip.ViewModel.CarRentIndexVM

@{
    ViewBag.Title = "Car Rent";
}

<!DOCTYPE html>
<html>
<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="~/Scripts/jquery-1.10.2.intellisense.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hotels-Index</title>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script>
        $(function () {
            var dateToday = new Date();
            var dates = $("#sdate, #edate").datepicker({
                defaultDate: "+1w",
                dateFormat: "dd.mm.yy",
                changeMonth: true,
                minDate: dateToday,
                onSelect: function (selectedDate) {
                    var option = this.id == "sdate" ? "minDate" : "maxDate",
                        instance = $(this).data("datepicker"),
                        date = $.datepicker.parseDate(instance.settings.dateFormat || $.datepicker._defaults.dateFormat, selectedDate, instance.settings);
                    dates.not(this).datepicker("option", option, date);
                }
            });
        });
    </script>

    <style>
        input[type=text] {
            border: 3px solid #ccc;
            -webkit-transition: 0.5s;
            transition: 0.5s;
            outline: none;
        }

            input[type=text]:focus {
                border: 3px solid #555;
            }

        body {
            background-color: #0072C6;
            padding: 50px;
        }

        .MainDiv {
            margin: 20px auto;
            width: 100%;
            margin-top: 40px;
            margin-bottom: 40px;
        }

        .screen {
            background-color: #FFF;
            padding: 20px;
            box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.2), 0 5px 5px 0 rgba(0, 0, 0, 0.24);
        }

        #submitbtn {
            outline: 0;
            background: #0072C6;
            width: 8%;
            border: 0;
            padding: 8px;
            color: #FFFFFF;
            font-size: 17px;
            cursor: pointer;
        }

        #sdate {
            border-radius: 5px;
            height: 33px;
            border-style: solid;
            border-width: 1px;
            border-color: #CCCCCC;
            text-align: center;
        }

        #edate {
            border-radius: 5px;
            height: 33px;
            border-style: solid;
            border-width: 1px;
            border-color: #CCCCCC;
            text-align: center;
        }

        .vertical-divider {
            clear: both;
            position: relative;
        }

            .vertical-divider:after {
                clear: both;
                content: " ";
                display: block;
                height: 0;
                visibility: hidden;
            }

            .vertical-divider .column:not(:first-child):after, .vertical-divider .columns:not(:first-child):after {
                background: #DDDDDD;
                bottom: 0;
                content: " ";
                margin-left: -10px;
                position: absolute;
                top: 0;
                width: 1px;
                height: 200px;
            }

        .container {
            position: relative;
            width: 960px;
            margin: 20px auto;
            padding: 0;
        }

            .container .column, .container .columns {
                float: left;
                display: inline;
                margin-left: 10px;
                margin-right: 10px;
            }

            .container .one-third.column {
                width: 30%;
            }

            .container .two-thirds.column {
                width: 70%;
            }
    </style>
</head>

<body>
    <div class="MainDiv">
        <div class="screen">
            @using (Html.BeginForm("SubmitSearch", "CarRent", FormMethod.Post, new { id = "myForm" }))
            {
                <center><h3><b>Car Rent Search</b></h3></center>
                <div class="row">
                    <div class="form-group">
                        <div class="col-md-3" align="center">
                            <p>Country</p>
                            @Html.DropDownListFor(x => x.desCountry, new SelectList(Model.desCountries), new { @class = "form-control", id = "countries", @onchange = "getCities()", align = "center" })
                        </div>
                        <div class="col-md-3" align="center">
                            <p>City</p>
                            @Html.DropDownListFor(x => x.desCity, new SelectList(Model.desCities), new { @class = "form-control", id = "cities", align = "center" })
                        </div>

                        <div class="col-md-3" align="center">
                            <p>Pick-up Date</p>
                            @Html.TextBoxFor(x => x.sdate, new { type = "text", id = "sdate", size = "12", placeholder = "Click Here", align = "center", @readonly = "readonly" })
                        </div>
                        <div class="col-md-3" align="center">
                            <p>Return Date</p>
                            @Html.TextBoxFor(x => x.edate, new { type = "text", id = "edate", size = "12", placeholder = "Click Here", align = "center", @readonly = "readonly" })
                        </div>
                    </div>
                </div>
                <br />
                <div class="row">
                    <center>
                        <button type="submit" id="submitbtn">Search</button>
                    </center>
                </div>
                <div class="row">
                    @Html.ValidationSummary(null, new { @class = "text-danger" })
                </div>
            }
        </div>
        <br />
        <center>
            <img src="https://vignette.wikia.nocookie.net/pixar/images/b/b2/Lightning_mcqueen_cars_2.png/revision/20160305115405" style="height:190px;width:440px;" />
        </center>
    </div>
    <script>
        function getCities()
        {
            var country = $('#countries').val();
            $.ajax({
                url: '/Hotel/GetCitiesByJSON',
                type: "GET",
                dataType: "JSON",
                data: { Country: country },
                success: function (citiesToFill) {
                    $("#cities").html("");
                    $.each(citiesToFill, function (index, option) {
                        $("#cities").append($("<option></option>")
                            .val(option, option).html(option));
                    });
                }
            });
        }

        function submitForm(id) {
            document.getElementById("hotelid").value = id;
            document.getElementById("myFormRand").submit();
        }
    </script>
</body>
</html>